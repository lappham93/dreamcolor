                            </div>
                            <div class="client-details text-center">
                                <div class="client-image">
                                    <img class="img-circle" src="{{URI_CL}}" width="80" height="80" alt="">
                                </div>
                                <div class="client-details">
                                    <!-- Name -->
                                    <strong class="text-color">{{CL_CODE}}</strong>
                                    <!-- Company -->
                                    <span>Designer, zozothemes</span>
                                </div>
