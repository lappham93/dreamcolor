                    <div id="cl_cate_{{ID}}" class="owl-carousel pagination-1 dark-switch" data-pagination="true" data-autoplay="true" data-navigation="false" data-items="1" data-desktop="1">
                        {{#loop_color}}
                        <div class="item pad-10" data-animation="fadeInLeft">
