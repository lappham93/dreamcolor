<!DOCTYPE html>
<html lang="en">
	<head>
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
		<meta charset="utf-8" />
		<title>Login {{Project-Title}}</title>
        <link rel="icon" type="image/x-icon" href="{{static-domain}}/common/imgs/imgo.jpg" />
		<meta name="description" content="{{Project-Title}}" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />

		<!-- bootstrap & fontawesome -->
		<link rel="stylesheet" href="{{static-domain}}/mitassets/css/bootstrap.css" />
		<link rel="stylesheet" href="{{static-domain}}/mitassets/css/font-awesome.css" />

		<!-- text fonts -->
		<link rel="stylesheet" href="{{static-domain}}/mitassets/css/ace-fonts.css" />

		<!-- ace styles -->
		<link rel="stylesheet" href="{{static-domain}}/mitassets/css/ace.css" />
		<link rel="stylesheet" href="{{static-domain}}/mitassets/css/ace-rtl.css" />
        
	</head>

	<body class="login-layout">
		<div class="main-container">
			<div class="main-content">
				<div class="row">
					<div class="col-sm-10 col-sm-offset-1">
						<div class="login-container">
							<div class="center">
								<h1>
									<i class="ace-icon fa fa-home green"></i>
									<span class="red">DreaMau App</span>
									<span class="white" id="id-text2">Admin</span>
								</h1>
								<h4 class="blue" id="id-company-text">&copy; DreaMau</h4>
							</div>
							<div class="space-6"></div>
							<div class="position-relative">
								<div id="login-box" class="login-box visible widget-box no-border">
									<div class="widget-body">
										<div class="widget-main">
											<h4 class="header blue lighter bigger">
												<i class="ace-icon fa fa-coffee green"></i>
												Please Enter Your Information
											</h4>
											<div class="space-6"></div>
                                            
                                            <iframe id="if_Login" name="if_Login" style="display: none;width: 0px;height: 0px"></iframe>
											<form id="frmLogin" name="frmLogin" action="/web/admin/login" method="POST" target="if_Login">
                                                <div id="login_alert_success" class="alert alert-success" style="display: none;"></div>
                    							<div id="login_alert_err" class="alert alert-danger" style="display: none;"></div>
												<fieldset>
													<label class="block clearfix">
														<span class="block input-icon input-icon-right">
															<input id="username" name="username" type="text" class="form-control" placeholder="Username" />
															<i class="ace-icon fa fa-user"></i>
														</span>
													</label>
													<label class="block clearfix">
														<span class="block input-icon input-icon-right">
															<input id="password" name="password" type="password" class="form-control" placeholder="Password" />
															<i class="ace-icon fa fa-lock"></i>
														</span>
													</label>
													<div class="space"></div>
													<div class="clearfix">
<!--														<label class="inline">
															<input type="checkbox" class="ace" />
															<span class="lbl"> Remember Me</span>
														</label>-->
														<button id="btnLogin" type="button" class="width-35 pull-right btn btn-sm btn-primary" onclick="submitLogin();">
															<i class="ace-icon fa fa-key"></i>
															<span class="bigger-110">Login</span>
														</button>
													</div>
													<div class="space-4"></div>
												</fieldset>
                                                <input type="hidden" id="callfunc" name="callfunc" value="completeLogin"/>
												<input type="hidden" id="reloadurl" name="reloadurl" value="{{RELOAD_URL}}"/>
											</form>
										</div><!-- /.widget-main -->
										
									</div><!-- /.widget-body -->
								</div><!-- /.login-box -->
								
							</div><!-- /.position-relative -->
						</div>
					</div><!-- /.col -->
				</div><!-- /.row -->
			</div><!-- /.main-content -->
		</div><!-- /.main-container -->

		<!-- basic scripts -->
        <script src="{{static-domain}}/mitassets/js/jquery.js"></script>
		<script type="text/javascript">
			if('ontouchstart' in document.documentElement) document.write("<script src='{{static-domain}}/mitassets/js/jquery.mobile.custom.js'>"+"<"+"/script>");
		</script>
        <script src="{{static-domain}}/mitassets/js/bootstrap.js"></script>
        <script src="{{static-domain}}/mitassets/js/ace/ace.js"></script>
<!-- inline scripts related to this page -->
<script type="text/javascript">
    jQuery(function($) {

    });
    
    function submitLogin() {
        $('#login_alert_success').hide();
        $('#login_alert_err').hide();

        var us = $('#username').val();
        us = us != '' ? us.trim() : '';
        var pw = $('#password').val();
        pw = pw != '' ? pw.trim() : '';
        if(us != '' && pw != ''){
        	$("#btnLogin").button('loading');
	        $('#frmLogin').unbind('submit');
	        $('#frmLogin').submit();
        }
        return false;
	};
	
	function completeLogin(data) {
		if (data.err >= 0) {
            $('#login_alert_success').html(data.msg);
            $('#login_alert_success').show();
            setTimeout(function() {
            	var reloadurl = data.reloadurl;
            	console.log('reloadurl: ' + reloadurl);
            	if(reloadurl != ''){
            		window.location = reloadurl;
            	} else{
            		//window.location.reload(true);
                    window.location = "{{domain-home}}";
            	}
                //window.location = window.location.href;
            }, 1000);
        } else {
            $('#login_alert_err').html(data.msg);
            $('#login_alert_err').show();

            $('frmLogin').bind('submit');
            $('#btnLogin').button('reset');
        }
	};
</script>
	</body>
</html>
